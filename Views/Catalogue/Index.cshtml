<style>
    * {
        box-sizing: border-box;
    }

    .container {
        display: flex;
        flex-wrap: wrap;
    }

        .container > section {
            padding: 15px;
            width: 100%;
        }

    .books {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .book {
        width: 45%;
    }

    .album {
        display: flex;
        width: 100%;
    }

        .album section {
            width: 50%;
        }

    ul {
        list-style: none;
        padding: 0;
        margin-top: 0;
    }

    .album-tracks {
        flex-direction: column;
    }

    .movies {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-evenly;
    }

        .movies > article {
            display: flex;
            flex-direction: column;
            width: 33%;
        }

    h2 {
        width: 100%;
    }

    img {
        max-width: 100%;
        height: auto;
        align-self: flex-start;
    }
</style>
