@model MbmStore.Models.Book
@using MbmStore.Infrastructure

<section class="row">
    <article class="col-md-2">
        <ul>
            <li>
                <b>Author:</b> @Model.Author
            </li>
            <li>
                <b>Title:</b> @Model.Title
            </li>
            <li>
                <b>Price:</b> @Model.Price
            </li>
            <li>
                <b>Publisher:</b> @Model.Publisher
            </li>
            <li>
                <b>ISBN:</b> @Model.ISBN
            </li>
        </ul>
        <img src="~/Images/@Model.ImageFileName" />
        @await Html.PartialAsync("AddToCartButton"), (Product) Model)
    </article>
</section>
